<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <TextView 
        android:text="2 手机卡绑定"
		style="@style/TitileStyle"      
        />
    <TextView android:text="通过绑定SIM卡：\n下次重启手机如果发现SIM卡发生变化就会发送报警短信"
        android:layout_width="wrap_content"
   		 android:layout_height="wrap_content"
   		 android:textSize="18sp"
        />
     
     <com.example.mobilesafe.activity.SettingItemActivity
     xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.mobilesafe"
    android:id="@+id/fangdao_bang_sim"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
      mobilesafe:destitle="点击绑定SIM卡"
	    mobilesafe:desoff="SIM卡未绑定"
	    mobilesafe:deson="SIM卡已经绑定"
    ></com.example.mobilesafe.activity.SettingItemActivity>
     
     
     <LinearLayout 
         android:gravity="center_horizontal"
          android:layout_width="match_parent"
   		 android:layout_height="wrap_content"
   		 
         >
   
          <ImageView 
               android:layout_width="wrap_content"
   			   android:layout_height="wrap_content"
   		       android:background="@android:drawable/btn_star_big_off"
             />
             <ImageView 
           	     android:layout_width="wrap_content"
   				 android:layout_height="wrap_content"
   				 android:background="@android:drawable/btn_star_big_on"
             />
          <ImageView 
               android:layout_width="wrap_content"
   			   android:layout_height="wrap_content"
   		       android:background="@android:drawable/btn_star_big_off"
             />
           <ImageView 
               android:layout_width="wrap_content"
   			   android:layout_height="wrap_content"
   		       android:background="@android:drawable/btn_star_big_off"
             />
     </LinearLayout>
     
     <RelativeLayout 
           android:layout_width="match_parent"
   		   android:layout_height="match_parent"
         >
         
         <ImageView 
             android:background="@drawable/bind"
               android:layout_width="wrap_content"
   			   android:layout_height="wrap_content"
   			   android:layout_centerInParent="true"
             />
         <Button 
            style="@style/LastBut"
             />
         <Button 
            style="@style/NextBut"
             />
     </RelativeLayout>
</LinearLayout>
